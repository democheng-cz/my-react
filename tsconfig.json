{
	"references": [],
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.jsx"
	],
	"exclude": ["node_modules", "dist", "src/**/*.stories.tsx"],
	// 增加别名
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"jsx": "react",
		"esModuleInterop": true,
		"lib": ["esnext", "dom", "ES2015"]
	}
}
